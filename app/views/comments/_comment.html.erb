<% show_post ||= false %>

<div class='row'>
  <div class="col-md-1 well text-center">
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post' do %>
        <i class="icon-arrow-up">&#8593</i>
      <% end %>
      <br/>
    <% end %>
    <%= comment.total_votes %> votes
    <% if logged_in? %>
      <br/>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post' do %>
        <i class="icon-arrow-down">&#8595</i>
      <% end %>
    <% end %>
  </div>
  <div class='col-md-8 well'>
    <em>"<%= comment.body %>"</em>
    <% if show_post %>
      on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <br/>
    <span class="quiet">posted by</span> <%= link_to comment.creator.username, user_path(comment.creator) %>
    <small>at <%= display_datetime(comment.created_at) %></small>
  </div>
</div>